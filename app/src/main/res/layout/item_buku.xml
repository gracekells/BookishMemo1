<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/iv_foto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Buku"
            android:layout_toEndOf="@+id/iv_foto"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:justificationMode="inter_word"/>

        <ImageView
            android:id="@+id/ic_autor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_bookmark_24"
            android:layout_toEndOf="@+id/iv_foto"
            android:layout_below="@+id/tv_judul"/>

        <ImageView
            android:id="@+id/ic_genre"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_format_list_bulleted_24"
            android:layout_toEndOf="@+id/iv_foto"
            android:layout_below="@+id/ic_autor"/>


        <TextView
            android:id="@+id/tv_autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deden"
            android:layout_below="@id/tv_judul"
            android:layout_toEndOf="@id/ic_autor"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:justificationMode="inter_word"/>

        <TextView
            android:id="@+id/tv_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="comendy"
            android:layout_below="@id/tv_autor"
            android:layout_toEndOf="@id/ic_genre"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:justificationMode="inter_word"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>